{
  "steps": [
    {
      "name": "node:12.11.1",
      "entrypoint": "npm",
      "args": [
        "install",
        "-C",
        "web"
      ]
    },
    {
      "name": "node:12.11.1",
      "entrypoint": "npm",
      "args": [
        "run",
        "build",
        "-C",
        "web"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker:18.09.6",
      "args": [
        "build",
        "-f",
        "web/build/Dockerfile",
        "-t",
        "gcr.io/$PROJECT_ID/complexity-inc-web:$SHORT_SHA",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker:18.09.6",
      "args": [
        "tag",
        "gcr.io/$PROJECT_ID/complexity-inc-web:$SHORT_SHA",
        "gcr.io/$PROJECT_ID/complexity-inc-web:latest"
      ]
    }
  ],
  "images": [
    "gcr.io/$PROJECT_ID/complexity-inc-web:latest"
  ]
}