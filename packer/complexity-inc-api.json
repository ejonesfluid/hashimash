{
  "builders": [
    {
      "type": "docker",
      "image": "golang:1.13.5",
      "commit": "true",
      "pull": "true",
      "changes": [
        "ONBUILD mkdir /go/src/api",
        "WORKDIR /go/src/api",
        "ENV GO111MODULE on",
        "ENTRYPOINT [\"main\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "api/",
      "destination": "/go/src/api"
    },
    {
      "type": "shell",
      "inline": [
        "cd /go/src/api",
        "go install -a -v cmd/main.go"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "gcr.io/complexity-inc/complexity-inc-api",
        "tag": "1.0.0"
      },
      {
        "type": "docker-push"
      }
    ]
  ]
}